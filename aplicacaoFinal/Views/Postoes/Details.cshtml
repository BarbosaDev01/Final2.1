        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoPino)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoPino)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PotenciaPosto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PotenciaPosto)
        </dd>
